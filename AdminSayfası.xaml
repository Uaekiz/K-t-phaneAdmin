<Page x:Class="KütüphaneAdmin.AdminSayfası"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KütüphaneAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin Sayfası">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="Green"
                   Grid.Column="0" 
                   Grid.ColumnSpan="4"  
                   Grid.Row="0"
                   Text="Hoşgeldiniz! Lütfen yapmak istediğiniz işlemi seçiniz"
        />

        <Button Content="Kitapları Görüntüleme"
                Foreground="GhostWhite"
                Background="Gray"
                Click="Kitap_Göster"
                Grid.Column="0"
                Grid.Row="1"
                Width="180"
                Height="40"
                Margin="10"
                />

        <Button Content="Üyeleri Görüntüleme"
                Click="Üyeler_Göster"
                Grid.Column="1"
                Grid.Row="1"
                Width="180"
                Height="40"
                Margin="10"
                />
        <!--<Button Content="Üye Sorgulama"
                Click="Üye_Sorgulama"
                Grid.Column="2"
                Grid.Row="1"
                Width="180"
                Height="40"
                Margin="10"
                />
        <Button Content="Üye İçeriği Görüntüleme"
                Click="Üye_İçeriği_Görüntüleme"
                Grid.Column="3"
                Grid.Row="1"
                Width="180"
                Height="40"
                Margin="10"
                />
        <Button Content="Admin Bilgilerini Güncelleme"
                Click="Admin_Bilgilerini_Güncelleme"
                Grid.Column="0"
                Grid.Row="2"
                Width="180"
                Height="40"
                Margin="10"
                />
        <Button Content="Kitap Ekleme Günceleme"
                Click="Kitap_Ekleme_Güncelleme"
                Grid.Column="1"
                Grid.Row="2"
                Width="180"
                Height="40"
                Margin="10"
                />
        <Button Content="Kitap Sorgulama"
                Click="Kitap_Sorgulama"
                Grid.Column="2"
                Grid.Row="2"
                Width="180"
                Height="40"
                Margin="10"
                />
        <Button Content="Kütüphane Bilgisi"
                Click="Kütüphane_Bilgisi"
                Grid.Column="3"
                Grid.Row="2"
                Width="180"
                Height="40"
                Margin="10"
                />-->
    </Grid>
</Page>
