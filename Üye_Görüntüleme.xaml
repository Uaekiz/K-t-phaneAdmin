<Page x:Class="KütüphaneAdmin.Üye_Görüntüleme"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KütüphaneAdmin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Üye_Görüntüleme">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="ÜyeTablosu"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Margin="35,0,35,0"
              HorizontalAlignment="Stretch" 
              VerticalAlignment="Stretch"
              Grid.Row="1"
              Grid.Column="1"
              RowBackground="AliceBlue"
              CanUserResizeColumns="False" 
              CanUserResizeRows="False"
              FontSize="20"
              MouseDoubleClick="ÜyeTablosu_MouseDoubleClick">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Üye Adı"
                                      Binding="{Binding GUyeAdi}"
                                      Width="2*"/>
                <DataGridTextColumn Header="ID"
                                      Binding="{Binding GUyeId}"
                                      Width="2*"/>

                <DataGridTextColumn Header="Aldığı Kitap Sayısı"
                                      Binding="{Binding GAlinanKitap}"
                                      Width="1.5*"/>

            </DataGrid.Columns>
        </DataGrid>
        <Button Content="❮"
            Grid.Row="0"
            Grid.Column="0"
            Width="20"
            Height="20" 
            Margin="3"
            Click="Geri_Dön"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Background="Transparent" 
            BorderBrush="Transparent" />

        <TextBox Name="Üye_Arama"
             Grid.Row="0"
             Grid.Column="1"
             Height="40"
             VerticalContentAlignment="Center"
             FontSize="20"
             HorizontalAlignment="Left"
             Margin="35,20,0,0"
             Width="408"/>

        <Button Content="🔍"
            Height="40"
            Width="40"
            Grid.Column="1"
            Grid.Row="0"
            Click="UArama"
            HorizontalAlignment="Left"
            Background="Transparent" 
            BorderBrush="Transparent"
            Margin="443,20,0,0" />
    </Grid>
</Page>
